pipeline {
    agent {
        docker {
            image 'openjdk:21-jdk'
            args '-u root:root'   // optional: run as root for easy permissions
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "Compiling Java..."
                    mkdir -p out
                    javac src/HelloWorld.java -d out
                '''
            }
        }

        stage('Run') {
            steps {
                sh '''
                    echo "Running Java program..."
                    java -cp out HelloWorld
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'out/**', fingerprint: true
            echo "Pipeline completed."
        }
    }
}
